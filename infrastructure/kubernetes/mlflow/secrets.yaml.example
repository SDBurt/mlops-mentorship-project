# MLflow Secrets
# Copy to secrets.yaml and apply before deploying MLflow
#
# kubectl apply -f secrets.yaml -n lakehouse

---
apiVersion: v1
kind: Secret
metadata:
  name: mlflow-db-secret
  namespace: lakehouse
type: Opaque
stringData:
  # Password for 'mlflow' PostgreSQL user
  # Generate with: openssl rand -base64 24
  password: "<GENERATE: openssl rand -base64 24>"
  # Password for 'postgres' admin user
  # Generate with: openssl rand -base64 24
  postgres-password: "<GENERATE: openssl rand -base64 24>"

---
apiVersion: v1
kind: Secret
metadata:
  name: mlflow-s3-secret
  namespace: lakehouse
type: Opaque
stringData:
  # MinIO credentials (must match your MinIO deployment)
  # Get from: kubectl get secret minio-secret -n lakehouse -o jsonpath='{.data.access-key}' | base64 -d
  access-key: "<COPY_FROM_MINIO_SECRET>"
  secret-key: "<COPY_FROM_MINIO_SECRET>"
