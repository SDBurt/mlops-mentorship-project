# Example: PostgreSQL Secrets for Polaris
# Copy this file to postgres-secrets.yaml and replace placeholders
# DO NOT commit postgres-secrets.yaml - it is gitignored

apiVersion: v1
kind: Secret
metadata:
  name: polaris-postgresql-secret
  namespace: lakehouse
type: Opaque
stringData:
  # Polaris database user password
  # This should match the password in polaris-postgresql/values.yaml
  # or override values.yaml using Helm --set
  polaris-password: "CHANGEME_POLARIS_PASSWORD"
  
  # PostgreSQL superuser (postgres) password
  # This should match postgresPassword in polaris-postgresql/values.yaml
  postgres-password: "CHANGEME_POSTGRES_PASSWORD"

