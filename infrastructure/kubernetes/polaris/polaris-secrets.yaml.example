# Example: Polaris Catalog Secrets
# Copy this file to secrets.yaml and replace placeholders
# DO NOT commit secrets.yaml - it is gitignored

---
# Database connection secret for Polaris metadata storage
# Uses the polaris-postgresql deployment
apiVersion: v1
kind: Secret
metadata:
  name: polaris-db-secret
  namespace: lakehouse
type: Opaque
stringData:
  username: polaris
  password: "CHANGEME_POLARIS_PASSWORD"
  jdbcUrl: jdbc:postgresql://polaris-postgresql:5432/polaris

---
# Storage credentials for MinIO S3 access
# Allows Polaris to manage Iceberg table data in MinIO
apiVersion: v1
kind: Secret
metadata:
  name: polaris-storage-secret
  namespace: lakehouse
type: Opaque
stringData:
  aws-access-key-id: admin
  aws-secret-access-key: "CHANGEME_MINIO_PASSWORD"

---
# Bootstrap credentials for Polaris (optional)
# Used to create initial admin principal
# Format: "realm,principal-name,secret"
# Can also be set via Helm --set extraEnv[].value
apiVersion: v1
kind: Secret
metadata:
  name: polaris-bootstrap-secret
  namespace: lakehouse
type: Opaque
stringData:
  # Bootstrap credentials: format is "realm,principal-name,secret"
  credentials: "lakehouse,polaris_admin,CHANGEME_BOOTSTRAP_SECRET"

