# Example: Polaris Catalog Secrets
# Copy this file to polaris-secrets.yaml and replace placeholders
# DO NOT commit polaris-secrets.yaml - it is gitignored

# NOTE: Polaris uses in-memory persistence (development mode).
# Database secrets are not required. Only storage and bootstrap credentials are needed.
# For production, switch to relational-jdbc persistence with external PostgreSQL.

---
# Storage credentials for MinIO S3 access
# Allows Polaris to manage Iceberg table data in MinIO
apiVersion: v1
kind: Secret
metadata:
  name: polaris-storage-secret
  namespace: lakehouse
type: Opaque
stringData:
  aws-access-key-id: admin
  aws-secret-access-key: "CHANGEME_MINIO_PASSWORD"

---
# Bootstrap credentials for Polaris
# These credentials are used to create the initial admin principal
apiVersion: v1
kind: Secret
metadata:
  name: polaris-bootstrap-credentials
  namespace: lakehouse
type: Opaque
stringData:
  # Bootstrap credentials format: "realm,principal-name,secret"
  # Used by Polaris to create the initial admin account
  bootstrap-credentials: "lakehouse,polaris_admin,CHANGEME_BOOTSTRAP_SECRET"

  # Individual fields for init script
  client-id: "polaris_admin"
  client-secret: "CHANGEME_BOOTSTRAP_SECRET"
