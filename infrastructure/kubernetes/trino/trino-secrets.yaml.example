# Example: Trino Environment Secrets
# Copy this file to trino-secrets.yaml and replace placeholders
# DO NOT commit trino-secrets.yaml - it is gitignored

apiVersion: v1
kind: Secret
metadata:
  name: trino-env-secrets
  namespace: lakehouse
type: Opaque
stringData:
  # Polaris OAuth credentials for REST catalog authentication
  # Format: "principal-name:secret"
  # Example: "polaris_admin:your_secret_here"
  # These credentials are used by Trino to authenticate with Polaris REST catalog
  POLARIS_OAUTH_CREDENTIAL: "CHANGEME_POLARIS_OAUTH_CREDENTIAL"

  # MinIO S3 credentials for Trino S3 filesystem
  # These should match your MinIO deployment credentials
  S3_ACCESS_KEY: "admin"
  S3_SECRET_KEY: "CHANGEME_MINIO_PASSWORD"
