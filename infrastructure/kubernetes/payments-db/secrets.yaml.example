# Payments Database Secrets
# Copy to secrets.yaml and apply before installing PostgreSQL
#
# kubectl apply -f secrets.yaml -n lakehouse
# kubectl apply -f init-configmap.yaml -n lakehouse
# Then: helm install payments-db bitnami/postgresql -n lakehouse -f values.yaml

apiVersion: v1
kind: Secret
metadata:
  name: payments-db-secret
  namespace: lakehouse
type: Opaque
stringData:
  # Password for 'payments' user
  # Generate with: openssl rand -base64 24
  password: "<GENERATE: openssl rand -base64 24>"

  # Password for 'postgres' admin user
  # Generate with: openssl rand -base64 24
  postgres-password: "<GENERATE: openssl rand -base64 24>"
