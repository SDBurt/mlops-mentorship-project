# Example: MinIO S3 Credentials
# Copy this file to minio-secrets.yaml and replace placeholders
# DO NOT commit minio-secrets.yaml - it is gitignored

apiVersion: v1
kind: Secret
metadata:
  name: minio-credentials
  namespace: lakehouse
type: Opaque
stringData:
  # MinIO root user credentials
  # These should match the values used in minio/values.yaml
  # Override via Helm --set auth.rootPassword or use this Secret
  access-key-id: "admin"
  secret-access-key: "CHANGEME_MINIO_PASSWORD"

