# Temporal Database Secrets
# Copy to secrets.yaml and apply before installing Temporal
#
# kubectl apply -f secrets.yaml -n lakehouse
# Then: helm install temporal temporalio/temporal -n lakehouse -f values.yaml

apiVersion: v1
kind: Secret
metadata:
  name: temporal-db-secret
  namespace: lakehouse
type: Opaque
stringData:
  # PostgreSQL password for temporal user
  # Generate with: openssl rand -base64 24
  password: "<GENERATE: openssl rand -base64 24>"
