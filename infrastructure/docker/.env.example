# Reddit API Credentials
# Get these from https://www.reddit.com/prefs/apps
# Copy this file to .env and fill in your actual credentials

REDDIT_CLIENT_ID="your_reddit_client_id"
REDDIT_CLIENT_SECRET="your_reddit_client_secret"
REDDIT_USER_AGENT="python:lakehouse-dlt:v1.0.0 (by /u/your_username)"

# AWS/MinIO Credentials
# Used by Flink, Polaris, MinIO, and Dagster services
# For local development with MinIO, these match MinIO root credentials

AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=password
AWS_REGION=dummy-region

# MinIO Root Credentials
# These are used by MinIO service itself
# WARNING: Change these from defaults for production use

MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password

# Polaris Credentials
# Used for Polaris REST catalog authentication
# WARNING: Change these from defaults for production use

POLARIS_REALM=default-realm
POLARIS_USER=root
POLARIS_PASSWORD=secret

# PostgreSQL Credentials (Dagster)
# Used by Dagster services for database connection
# WARNING: Change these from defaults for production use

POSTGRES_USER=dagster
POSTGRES_PASSWORD=dagster
POSTGRES_DB=dagster

# Dagster PostgreSQL Credentials (aliases)
# These match POSTGRES_* variables above for Dagster services

DAGSTER_POSTGRES_USER=dagster
DAGSTER_POSTGRES_PASSWORD=dagster
DAGSTER_POSTGRES_DB=dagster

TRINO_HOST=trino

# Payment Pipeline Credentials
# Used by payments-db (orchestrator persistence)
# WARNING: Change these from defaults for production use

PAYMENTS_DB_USER=payments
PAYMENTS_DB_PASSWORD=payments
PAYMENTS_DB_NAME=payments

# Temporal Credentials
# Used by temporal-db (workflow state persistence)
# WARNING: Change these from defaults for production use

TEMPORAL_DB_USER=temporal
TEMPORAL_DB_PASSWORD=temporal
TEMPORAL_DB_NAME=temporal

# Stripe Webhook Secret
# Used by payment-gateway for signature verification
STRIPE_WEBHOOK_SECRET=whsec_test_secret_for_dev
