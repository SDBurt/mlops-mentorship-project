FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends procps && \
    rm -rf /var/lib/apt/lists/*

# Copy contracts package (dependency)
COPY contracts/ /contracts/

# Copy project files
COPY services/transformer/pyproject.toml ./
COPY services/transformer/src/ ./src/

# Install Python dependencies
RUN pip install --no-cache-dir /contracts && pip install --no-cache-dir -e .

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash appuser && \
    chown -R appuser:appuser /app
USER appuser

# Health check - verify process is running
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD pgrep -f "transformer.entrypoints.braintree_main" || exit 1

# Run Braintree transformer
CMD ["python", "-m", "transformer.entrypoints.braintree_main"]
